<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.ezen.myProject.repository.CommentDAO">
	<insert id="insertComment" parameterType="com.ezen.myProject.domain.CommentVO"> 
		insert into comment (bno,writer,content) values (#{bno},#{writer},#{content})
	</insert>
	<select id="selectList" parameterType="int" resultType="com.ezen.myProject.domain.CommentVO">
	select * from comment where bno = #{bno}
	</select>
	<update id="updateComment">
		update comment set content = #{content}, mod_at = now()	where cno = #{cno}
	</update>
	
	<delete id="deleteComment">
		delete from comment where cno = #{cno}
	</delete>
	
	<!-- 	
	<delete id="delAll" parameterType="int">
	delete from comment where bno = #{bno}
	</delete> -->
</mapper>